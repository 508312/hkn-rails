<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <title><%= "Eta Kappa Nu (HKN), Mu Chapter"%><%= " - #{@module_title}" unless @module_title.blank? %><%= " - #{@submodule_title}" unless @submodule_title.blank? %></title>
  <%= stylesheet_link_tag 'main' %>
  <%= stylesheet_link_tag 'print', :media => 'print' %>
  <%= javascript_include_tag "jquery-1.4.4.min" %>
  <%= javascript_include_tag "navigation" %>
  <%= javascript_include_tag "chat" %>
  <%= csrf_meta_tag %>
  <link href='http://fonts.googleapis.com/css?family=Puritan|Cuprum' rel='stylesheet' type='text/css'>
  
  <%= yield(:header) %>
  
  <!--Automatically includes javascript or css files with the same name as the controller -->
  <% filename = controller.controller_name %>
  <% if FileTest.exist?  RAILS_ROOT + "/public/stylesheets/" + filename + ".css" %>
    <%= stylesheet_link_tag "#{filename}" %>
  <% end %>
  <% if FileTest.exist?  RAILS_ROOT + "/public/javascripts/" + filename + ".js" %>
    <%= javascript_include_tag "#{filename}" %>
  <% end %>
</head>
<body>
<div id="bar">
  <div class="left">
    <div id="userbar" style="display:none">
      <%= render "layouts/userbar" %>
    </div>
  </div>
  <div class="right">
    <div id="user" class="bar-icon"></div>
    <div id="chat" class="bar-icon"></div>
  </div>
</div>
<div id="chatwindow">
</div>
<div id="wrapper">
  <div id="header">
  	<div id="navigation">
  	  <ul>
  	    <li><a class="navigation_toplevel_item" id="services" href="#">Student Services</a></li>
  	    <li><a class="navigation_toplevel_item" id="indrel" href="#">Industry Relations</a></li>
  	    <li><a class="navigation_toplevel_item" id="events" href="#">Events</a></li>
  	    <% if @current_user %>
  	      <li><a class="navigation_toplevel_item" id="people" href="#">People</a></li>
  	    <% end %>
  	    <li><a class="navigation_toplevel_item" id="alumni" href="#">Alumni Network</a></li>
  	    <li><a class="navigation_toplevel_item" id="about" href="#">About HKN</a></li>
  	    <% if @auth["candidates"] %>
  	      <li><a class="navigation_toplevel_item" id="cand" href="#">Candidate Portal</a></li>
  	    <% end %>
  	    <% if @auth["comms"] %>
  	      <li><a class="navigation_toplevel_item" id="admin" href="#">Administration</a></li>
  	    <% end %>
  	  </ul>
  	</div>
  	<div id="lower">
  	  <div id="content">
  	    <div id="logo">
    	  </div>
    	  <div id="submenu">
    	    <div class="submenu" id ="services_submenu">
            <ul class="plain">
              <li><a href="/tutor/">Tutoring</a></li>
              <li><%= link_to "Course Surveys", coursesurveys_path %></li>
              <li><a href="/exam/browse/">Exam Archive</a></li>
            </ul>
            <ul class="plain">
              <li><%= link_to "Course Guide", comingsoon_path || "/courseguide/" %></li>
              <li><%= link_to "Department Tours", dept_tour_signup_path %>
              <li><%= link_to "More Services", comingsoon_path || "/services/more" %></li>
            </ul>
          </div>

          <div class="submenu" id ="indrel_submenu">
            <ul class="plain">
              <li><%= link_to "Why HKN?", indrel_path %></li>
              <li><%= link_to "Resume Books", resume_books_path %></li>
              <li><%= link_to "Infosessions", infosessions_path %></li>
            </ul>
            <ul class="plain">
              <li><%= link_to "Career Fair", career_fair_path %></li>
              <li><%= link_to "Contact Us", indrel_contact_us_path %></li>
            </ul>
          </div>

          <% if @current_user %>
          <div class="submenu" id="people_submenu">
            <ul class="plain">
              <li><%= link_to "Officers",          people_list_path("officers") %></li>
              <li><%= link_to "Committee Members", people_list_path("cmembers") %></li>
              <li><%= link_to "Members",           people_list_path("members") %></li>
            </ul>
            <ul class="plain">
              <li><%= link_to "Candidates",        people_list_path("candidates") %></li>
            </ul>
          </div>
          <% end %>

          <div class="submenu" id ="events_submenu">
            <ul class="plain">
              <li><%= link_to "Events Calendar", events_calendar_path %></li>
              <li><%= link_to "Upcoming Events", events_category_path('future') %></li>
              <li><%= link_to "Past Events", events_category_path('past') %></li>
            </ul>
            <ul class="plain">
	      <%- if @current_user %>
              <li><%= link_to "My RSVPs", my_rsvps_path %></li>
	      <%- end %>
	      <li><%= link_to "Confirm RSVPs", vp_confirm_path %></li>
            </ul>
          </div>

          <div class="submenu" id ="alumni_submenu">
            <ul class="plain">
              <li><a href="/alumni/registration/" class="navigation_sublevel_item">Registration</a></li>
              <li><a href="/alumni/newsletter/" class="navigation_sublevel_item">Alumni Newsletter</a></li>
            </ul>
          </div>
          
          <div class="submenu" id ="about_submenu">
            <ul class="plain">
              <li><a href="/about/contact/" class="navigation_sublevel_item">Contact Information</a></li>
              <li><%= link_to "Photo Gallery", comingsoon_path||"/gallery2/", :class=>"navigation_sublevel_item" %></li>
              <li><%= link_to "Yearbooks",     "/about/yearbook/",            :class=>"navigation_sublevel_item" %></li>
            </ul>
            <ul class="plain">
              <li><a href="/about/slideshow/" class="navigation_sublevel_item">Slideshows</a></li>
              <li><%= link_to "Current Officers", comingsoon_path||"/about/officers/", :class=>"navigation_sublevel_item" %></li>
            </ul>
          </div>


          <% if @current_user && @auth["candidates"] %>
          <div class="submenu" id="cand_submenu">
            <ul class="plain">
              <li><a href="/cand/portal/" class="navigation_sublevel_item">Portal Home</a></li>
              <li><a href="/cand/application/" class="navigation_sublevel_item">Application Form</a></li>
            </ul>
          </div>
          <% end %>
          
          <% if @auth["comms"] %>
          <div class="submenu" id ="admin_submenu">
            <ul class="plain">
              <li><a href="/admin/tutor/signup_slots/" class="navigation_sublevel_item">Tutor Slot Signup</a></li>
	      <li><a href="/admin/tutor/signup_courses/" class="navigation_sublevel_item">Tutor Course Signup</a></li>
            </ul>
            <ul class="plain">
              <% if @auth['csec'] %>
                <li><a href="/admin/csec" class="navigation_sublevel_item">Csec Admin</a></li>
              <% end %>
              <% if @auth["deprel"] %>
                <li><a href="/admin/deprel" class="navigation_sublevel_item">Deprel Admin [<%= controller.num_deprel_requests %>]</a></li>
              <% end %>
              <% if @auth["indrel"] %>
                <li><a href="/admin/indrel/" class="navigation_sublevel_item">Indrel Admin</a></li>
              <% end %>
              <% if @auth["tutor"] %>
                <li><a href="/admin/tutor/edit_schedule/" class="navigation_sublevel_item">View Tutor Signups</a></li>
                <li><a href="/admin/tutor/" class="navigation_sublevel_item">Tutor Admin</a></li>
              <% end %>
            </ul>
          </div>
          <% end %>

    	  </div>
    	  <div id="topbar">
          <%= render "layouts/searcharea" %>
          <div class="clear"></div>
        </div>
    	  <div class="clear"></div>
    	</div>
  	</div>
  </div>

  <div id="content">
    <div id="container">
  	  <% if !@messages.empty? %>
    	  <div id="messages">
      		<% @messages.each do |message| %>
      		  <div class="message"><%= message %></div>
      		<% end %>
      	</div>
    	<% end %>
    	<% if Rails.env=="development" and !@debug.empty? %>
    	  <div id="debug">
      		<% @debug.each do |message| %>
      		  <div class="message">Debug:<%= message %></div>
      		<% end %>
    	  </div>
  	  <% end %>
    
      <%= yield %>
    </div>
  </div>
  <div id="push"></div>
</div>

  <div id="footer">
  	<div id="footer-right">Eta Kappa Nu, Mu Chapter (<a href="mailto:www@hkn.eecs.berkeley.edu">www@hkn.eecs.berkeley.edu</a>)</div>
    <div id="footer-left"><%= link_to "HOME", root_url %> | <a href="/about/contact/">CONTACT</a></div>
  </div>

</body>
</html>
