<ul id="upcoming-events" class="plain">
<% for event in @events.reject {|e| EventType.find(:all, :conditions => ["name IN (?)", ["Exam", "Review Session"]]).include?(e.event_type)} %>
  <li class="event <%= " current" if event.start_time < Time.now %>">
    <span class="name">
      <%= link_to event.name, event %> (<span class="location"><%= event.location %></span>)
      <% if event.allows_rsvps? && event.can_rsvp?(@current_user) && @current_user && !@current_user.events.include?(event) %>
        [<%= link_to "RSVP", "/events/" + event.id.to_s + "/rsvps/new" %>]
      <% end %>
    </span>
    <span>
      <span class="time">
        <%= event.nice_time_range %>
      </span>
    </span>
    <span class="description"><%= event.description %></span>
  </li>
<% end %>
</ul>
