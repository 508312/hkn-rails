<h1>Edit Announcement</h1>

<% form_tag("../update_announcement", :method => "post") do %>
  <%= hidden_field_tag :id, @announcement.id %>
  
  <div class="field">
    <%= label_tag :title %><br />
    <%= text_field_tag :title, @announcement.title %>
  </div>

  <div class="field">
    <%= label_tag :body %><br />
    <%= text_area_tag :body, @announcement.body %>
  </div>
  <p>
    <%= submit_tag "Submit" %>
  </p>
<% end %>
