<h1><%= link_to @course.course_name, surveys_course_path(@course) %> - <%= @klass.proper_semester %></h1>

<table id="rating_info" class="infobox">
  <tr> <th>Number of Respondents</th>   <td><%= @total_responses %></td> </tr>
  <tr> <th>Mean</th>                    <td><%= sprintf "%.1f", @answer.mean %></td> </tr>
  <tr> <th>Standard Deviation</th>      <td><%= sprintf "%.1f", @answer.deviation %></td> </tr>
  <tr> <th>Median</th>                  <td><%= sprintf "%.1f", @answer.median %></td> </tr>
  <tr> <th>95% Confidence Interval</th> <td>I need to read up on stats again...</td> </tr>
  <tr>
    <th>Frequency Distribution</th>  
    <td>
      <ul>
      <%- @frequencies.keys.sort.each do |key| -%>
        <li><%= key %>: <%= bar(@frequencies[key].to_f/@mode) %> <%= @frequencies[key] %></li>
      <%- end -%>
      </ul>
    </td>
  </tr>
</table>

<table id="ratings">
<%- @results.each do |instructor, answers| -%>
  <%- if answers.nil? -%>
  <tr>
    <th colspan="2">
      <%= @klass.instructor_type(instructor) %> <%= link_to instructor.name, surveys_instructor_path(instructor) %>
    </th>
  </tr>
  <tr><td colspan="2">This instructor's ratings are <%= link_to "hidden", coursesurveys_ferpa_path %>.</td></tr>
  <%- else -%>
  <tr>
    <th>
      <%= @klass.instructor_type(instructor) %> <%= link_to instructor.name, surveys_instructor_path(instructor) %>
    </th>
    <th><%= ActiveSupport::JSON.decode(answers.first.frequencies).values.reduce{|x,y| x.to_i+y.to_i} %> respondents</th>
  </tr>
    <%- answers.each do |answer| -%>
  <tr>
    <td>
      <%- if answer.survey_question.important -%><strong><%- end -%>
      <%= answer.survey_question.text %>
      <%- if answer.survey_question.important -%></strong><%- end -%>
    </td>
    <td>
      <%= sprintf "%.1f", answer.mean %> / <%= answer.survey_question.max.to_f %>
      <%= rating_bar(answer.mean/answer.survey_question.max.to_f, nil, answer.survey_question.inverted) %>
    </td>
  </tr>
    <%- end -%>
  <%- end -%>
<%- end -%>
</table>

