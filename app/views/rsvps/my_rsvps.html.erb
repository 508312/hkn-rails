<h1>My RSVPs</h1>

<table>
  <tr>
    <th>Event</th>
    <th>Waitlist spot</th>
    <th>Confirmed?</th>
    <th></th>
    <% if @auth['comms'] %>
    <th></th>
    <th></th>
    <% end %>
  </tr>

<% @rsvps.zip(@waitlist_spots).each do |rsvp, waitlist| %>
  <tr>
    <td><%= rsvp.event.name %></td>
    <td><%= waitlist == 0 ? "not on waitlist" : waitlist %></td>
    <td><%= rsvp.confirmed == 't' ? "Yes" : "No" %></td>
    <td><%= link_to 'Show', event_rsvp_path(rsvp.event, rsvp) %></td>
    <% if @auth['comms'] %>
    <td class='admin'><%= link_to 'Edit', edit_event_rsvp_path(rsvp.event, rsvp) %></td>
    <td class='admin'><%= link_to 'Destroy', event_rsvp_path(rsvp.event, rsvp), confirm: 'Are you sure?', method: :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />
