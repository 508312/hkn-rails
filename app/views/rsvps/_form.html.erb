<%= form_for([@event, @rsvp]) do |f| %>
  <% if @rsvp.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@rsvp.errors.count, "error") %> prohibited this rsvp from being saved:</h2>

      <ul>
      <% @rsvp.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= hidden_field_tag 'rsvp[person_id]', @current_user.id %>
  <%= hidden_field_tag 'rsvp[event_id]', @event.id %>

  <div class="field">
    <label>Event</label><br />
    <%= link_to @event.name, @event %>
  </div>

  <div class="field">
    <label>Person</label><br />
    <%= link_to @current_user.fullname, @current_user %>
  </div>

  <% if @event.need_transportation %>
  <div class="field">
    <%= f.label :transportation %><br />
    <%= f.select :transportation, Rsvp::TRANSPORT_ENUM %>
  </div>
  <% end %>

  <div class="field">
    <%= f.label :comment, 'Anything we should know?' %><br />
    <%= f.text_area :comment %>
  </div>

  <% if @event.blocks.size > 1 %>
  <div class="field">
    <%= f.label :blocks, 'Time slots' %>
    <% @event.blocks.each do |block| %>
      <%= check_box_tag "block[#{block.id}]", true, @rsvp.blocks.include?(block) %> <%= block.start_time %> - <%= block.end_time %><br />
    <% end %>
  </div>
  <% end %>

  <div class="actions">
    <%= f.submit 'RSVP!' %>
  </div>
<% end %>
