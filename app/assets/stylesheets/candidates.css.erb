#checklist {
  background: white;
  padding: 1em;
  -webkit-box-shadow: 0px 5px 20px #eee;
}

#sidebar, #announcements, #requirements, #links {
  margin: 1em 0px;
}

ul.semi-plain {
  list-style: none;
  padding: 0px;
  margin: 0px;
  padding-left: 1em;
}

.req_status {
  display: inline-block;
  width: 16px;
  height: 13px;
  position:relative;
  top:2px;
}

.status_done {
  background: url(<%= asset_path 'icons/check.png' %>);
}

.status_notdone {

  background: url(<%= asset_path 'icons/uncheck.png' %>);
}

.event_status {
  display: inline-block;
  width: 16px;
  height: 16px;
  position:relative;
  top: 4px;
}

.event_done {
  background: url(<%= asset_path 'icons/bullet_green.png' %>);
}

.event_notdone {
  background: url(<%= asset_path 'icons/bullet_red.png' %>);
}

.announcement {
  padding: 0.5em;
  margin: 5px;
  text-indent: 0px;
}

.announcement .title {
  font-weight: bold;
}

.announcement .body {
  display: block;
}

#upcoming_events, #announcements ul {
  padding-left: 0px;
  text-indent: 0px;
}

#description {
  width: 178px;
  height: 50px;
}
