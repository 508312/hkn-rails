var KAPPA = "<img src='<%= asset_path('icons/kappa.png') %>' alt='Kappa'>"

function kappa_helper(node) {
    var newHTML = $(node).html().replace('Kappa', KAPPA)
    $(node).html(newHTML);
    if ($(node).children().length != 0) {
        $(node).children().each(function () {
            kappa_helper($(this))
        })
    }
}

function kappa(node) {
    kappa_helper($('body'))
}

$(document).ready(kappa)
