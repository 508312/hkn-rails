$(document).ready(function() {
  $(".datetimepicker").datetimepicker({
    beforeShowDay: function(date) {
      var td = date.getDay();
      return [(date.getDay() != 0 && date.getDay() != 6), '', (td != 'Sat' && td != 'Sun') ? '' : 'only on weekday'];
    },

    // Make sure to change this as needed to only allow tours within dates and times that HKN is open
    // This goes along with the restrictions in dept_tour_controller.rb
    // Months in JS are strange, they are actually zero-indexed while everything else is not.
    hourMin: 11,
    hourMax: 16,
    minDate: 0,
    maxDate: new Date(2017, 4, 12),

    dateFormat: 'yy-mm-dd',
    timeFormat: 'hh:mm tt',

    stepHour: 1,
    stepMinute: 5,
    hourGrid: 1,
    minuteGrid: 15,

    showOn: "button",
    buttonImage: "<%= asset_path('icons/calendar.gif') %>",
    buttonImageOnly: true,
    buttonText: "Show calendar",
  });
});
